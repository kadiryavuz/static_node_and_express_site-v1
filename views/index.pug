extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

      //- Welcome heading 
      h1 Hi there! I'm Kadir Yavuz

      //- Title Desc. 
      p.lead.text-light
        | Full Stack JavaScript Developer
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

      //- Using each iterator in projects data and filling the info 
      each project in projects
        .cell
          a(href=`project/${project.id}`)
            img.thumbnail(src=`/static/images/${project.image_urls[0]}`)
            h5 #{project.project_name}
      
